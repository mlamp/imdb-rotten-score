{

  "name": "IMDB rotten scores",
  "manifest_version": 2,
  "version": "0.2",
  "description": "Add rotten tomatoes score to IMDB.com",
  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
            "128": "icons/icon128.png" },
  "options_page": "src/options.html",
  "default_locale": "en",
  "permissions": [
	"tabs",
	"contextMenus",
	"notifications",
	"http://www.imdb.com/*",
	"https://www.imdb.com/*",
	"http://api.rottentomatoes.com/*"
  ],
  "background": {
  	"scripts": ["lib/jquery.min.js", "src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://www.imdb.com/*"],
      "css": ["src/contentStyle.css"],
      "js": ["lib/jquery.min.js", "src/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
  	"icons/rt_lg.png",
  	"icons/rt_lg_gray.png"
  ]
}